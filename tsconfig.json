{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [ "es6", "dom" ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceRoot": "/app",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
