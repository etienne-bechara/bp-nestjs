{
  "name": "nestjs-boilerplate",
  "version": "0.1.0",
  "description": "Opinated Serverless Boilertplate Based on NestJS and Written in TypeScript",
  "author": {
    "name": "Etienne Bechara",
    "email": "et.rodrigues@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-boilerplate"
  },
  "license": "MIT",
  "scripts": {
    "start": "nest start --debug --watch",
    "start:prd": "node ./source/core/main.js || node ./build/source/core/main.js",

    "lint": "eslint **/*.ts",
    "build": "nest build",

    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --coverage --passWithNoTests",

    "draft:api": "ts-node ./draft/draft.cli -t api",
    "draft:crud": "ts-node ./draft/draft.cli -t crud",

    "update:patch": "ncu -u --semverLevel minor && npm i && npm audit fix",
    "update:minor": "ncu -u --semverLevel major && npm i && npm audit fix",
    "update:major": "ncu -u && npm i && npm audit fix --force",
    "update:boilerplate": "git fetch boilerplate && git merge boilerplate/master --allow-unrelated-histories",
    
    "orm:build": "nest build && mikro-orm cache:generate",
    "orm:set:dev": "cp-cli .env dist/.env",
    "orm:set:stg": "cp-cli .env.stg dist/.env",
    "orm:set:prd": "cp-cli .env.prd dist/.env",
    "orm:sync:dev": "npm run orm:build && npm run orm:set:dev && npm run orm:sync:run",
    "orm:sync:stg": "npm run orm:build && npm run orm:set:stg && npm run orm:sync:run",
    "orm:sync:prd": "npm run orm:build && npm run orm:set:prd && npm run orm:sync:run",
    "orm:sync:run": "mikro-orm schema:update --dump && mikro-orm schema:update --run",
    "orm:dump:dev": "npm run orm:build && npm run orm:set:dev && npm run orm:dump:run",
    "orm:dump:stg": "npm run orm:build && npm run orm:set:stg && npm run orm:dump:run",
    "orm:dump:prd": "npm run orm:build && npm run orm:set:prd && npm run orm:dump:run",
    "orm:dump:run": "mikro-orm schema:update --dump"
  },
  "dependencies": {
    "@nestjs/common": "7.3.2",
    "@nestjs/core": "7.3.2",
    "@nestjs/platform-express": "7.3.2",
    "@sentry/node": "5.20.1",
    "axios": "0.19.2",
    "chalk": "4.1.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "dotenv": "8.2.0",
    "flat": "5.0.0",
    "globby": "11.0.1",
    "mikro-orm": "3.6.15",
    "moment": "2.27.0",
    "mysql2": "2.1.0",
    "nestjs-mikro-orm": "1.0.3",
    "nodemailer": "6.4.10",
    "qs": "6.9.4",
    "redis": "3.0.2",
    "reflect-metadata": "0.1.13",
    "request-ip": "2.1.3",
    "rxjs": "6.6.0",
    "user-agents": "1.0.559",
    "uuid": "8.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.4.1",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.3.2",
    "@types/express": "4.17.7",
    "@types/fs-extra": "9.0.1",
    "@types/jest": "26.0.7",
    "@types/node": "14.0.26",
    "@types/nodemailer": "6.4.0",
    "@types/redis": "2.8.25",
    "@types/supertest": "2.0.10",
    "@types/user-agents": "1.0.0",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "change-case": "4.1.1",
    "clean-stack": "3.0.0",
    "cp-cli": "2.0.0",
    "eslint": "7.5.0",
    "eslint-plugin-more": "1.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "fs-extra": "9.0.1",
    "jest": "26.1.0",
    "npm-check-updates": "7.0.2",
    "source-map-support": "0.5.19",
    "supertest": "4.0.2",
    "ts-jest": "26.1.3",
    "ts-loader": "8.0.1",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7",
    "yargs": "15.4.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./build/source/core/orm/orm.connection.js"
    ]
  },
  "jest": {
    "moduleFileExtensions": [ "js", "json", "ts" ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "source",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
